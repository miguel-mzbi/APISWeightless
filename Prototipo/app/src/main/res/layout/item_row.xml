<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:orientation="vertical"
    android:layout_width="fill_parent">

    <TextView
        android:text="Item Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="11dp"
        android:id="@+id/tview_itemName_itemRow" />

    <TextView
        android:text="Item Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tview_itemDesc_itemRow"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tview_itemName_itemRow"
        android:layout_marginTop="33dp" />

    <TextView
        android:text="Item Qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tview_itemDesc_itemRow"
        android:layout_centerHorizontal="true"
        android:id="@+id/tview_itemQty_itemRow" />

    <TextView
        android:text="Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tview_itemQty_itemRow"
        android:layout_toEndOf="@+id/tview_itemQty_itemRow"
        android:layout_marginStart="49dp"
        android:id="@+id/tview_itemWeight_itemRow" />

    <TextView
        android:text="kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tview_itemWeight_itemRow"
        android:layout_alignParentEnd="true"
        android:id="@+id/tview_itemMeasure_itemRow" />

</RelativeLayout>